package de.monticore;

component grammar IOAutomata extends de.monticore.FlatSC,
                                     de.monticore.SCCondition,
                                     de.monticore.statements.MCStatementsBasis {


  /**
   * IOStateBody provides an Actionblock to set initial values
   */
  IOStateBody implements SCSBody = "/" MCBlockStatement ;

 /**
   * IOTransitionBody provides an IOAutomata transition body
   * @attribute Guard The transition is only active when the guard holds
   * @attribute actionBlock What is done when the transition is taken
   */
  IOTransitionBody implements SCTBody =
    guard:SCCondition? ("/" MCBlockStatement)?
  ;

  /**
   * The Value for empty data
   */
  NoData implements Expression = "--";

}