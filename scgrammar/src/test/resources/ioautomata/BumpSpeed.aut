statechart BumpSpeed {
    state Static;
    state Dynamic;

    initial state Dynamic;

	Dynamic -> Static [cmd == SpeedCmd.Static] / {speed = defaultSpeed; log = "Static Speed";};
	Static -> Dynamic [cmd == SpeedCmd.Dynamic] / {speed = (int) ((defaultSpeed>=distance/255.0f)?defaultSpeed:(distance/255.0f)); log = "Dynamic Speed";};
	Dynamic -> Dynamic / {speed = (int) ((defaultSpeed>=distance/255.0f)?defaultSpeed:(distance/255.0f));};
  }
